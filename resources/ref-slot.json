{
    "framework": {
        "metaData":         "/design/bind",
        "fragmentRootDir":  "/design/fragment",
        "webRootDir":       "/www",
        "mvcRootDir":       "/app/mvc",
        "restRootDir":      "/app/rest",
        "dbRootDir":        "/app/db",
        "restFilter":       "/rest",
        "mvcFilter":        "/mvc"
    },
    "fragments": {
        {@fragments@}
    },
    "logger": {
        "logFile":  "logs/slot.log",
        "maxsize":  104857600,
        "maxFiles": 10
    },
    "server": {
        "devMode":  true,
        "compress": true,
        "caching":  true,
        "cacheType":"inMemory"
    }
}
